<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="#aae7e3e3"
    android:padding="1dp"
    android:layout_marginBottom="2dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">



        <TextView
            android:id="@+id/date_text_view_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_weight="6"
            android:textColor="@android:color/holo_green_dark" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="10"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/title_text_view_adapter"
                android:textStyle="bold"
                android:textSize="19sp"
                android:gravity="start"
                android:text=""
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/description_text_view_adapter"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="14sp"
                android:maxLines="1"
                android:gravity="end"/>
        </LinearLayout>

        <ImageButton
            android:src="@drawable/delete_button"
            android:id="@+id/delete_button_adapter"
            android:layout_width="45dp"
            android:visibility="visible"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <CheckBox
            android:visibility="gone"
            android:layout_weight="6"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/task_check_box_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</android.support.v7.widget.CardView>